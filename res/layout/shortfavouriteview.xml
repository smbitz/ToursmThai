<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical" android:background="#ffffff">

        <TextView
            android:id="@+id/shortFavouriteItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" android:textColor="#00bfff" android:textSize="12dp" android:minLines="1"/>

        <TextView
            android:id="@+id/shortFavouriteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" android:textColor="#000000" android:maxLines="3" android:textSize="12dp"/>

    </LinearLayout>

</LinearLayout>